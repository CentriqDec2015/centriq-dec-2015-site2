<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Class - @ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Dosis:200,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Styles/Hover.css" rel="stylesheet" />
    <link href="~/Content/ParrallaxCss.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Styles/footer-basic-centered.css" rel="stylesheet" />
    @RenderSection("resourcescss", false)
    <link href='https://fonts.googleapis.com/css?family=Varela+Round|Audiowide' rel='stylesheet' type='text/css'>
    <link href="~/Content/main.css" rel="stylesheet" />

</head>
<body style="padding-top:0px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Class", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navigation navbar-collapse collapse">
                <ul class="listNav nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Biographies", "Bios", "Home")</li>
                    <li>@Html.ActionLink("Burrito Converter", "BurritoConverter", "Richard")</li>
                    <li>@Html.ActionLink("Helpful Links", "Resources", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    @RenderSection("parallax", false)
    <div class="body-content">
        @RenderBody()
    </div>
    <footer class="footer-basic-centered">

        <div class="col-md-3 image-header">
            <img class="img-responsive center-block" src="~/Content/images/logo/img-ClassLogoHighRez.jpg" />
        </div>
        <div class="col-md-9">
            <p class="footer-company-motto">Visit our Personal Sites</p>
            <div class="col-md-4">
                <p class="footer-links">
                    <a href="http://www.beauchampdevelopment.net" target="_blank">Nick Beauchamp</a> <br />
                    <a href="http://www.lillianfleming.net" target="_blank">Lillian Fleming</a> <br />
                    <a href="http://www.dmcarrdevelopment.net" target="_blank">Deanna Carr</a>
                </p>
            </div>
            <div class="col-md-4">
                <p class="footer-links">
                    <a href="http://www.jakelunn.net" target="_blank">Jake Lunn</a> <br />
                    <a href="http://www.jasonciemiega.net" target="_blank">Jason Ciemiega</a> <br />
                    <a href="http://www.hererradev.net" target="_blank">Ray Herrera</a> <br />
                    <a href="http://www.andallenprojects.net" target="_blank">Andrew Allen</a>
                </p>
            </div>
            <div class="col-md-4">
                <p class="footer-links">
                    <a href="http://www.greenwoodcodes.com" target="_blank">Matt Greenwood</a> <br />
                    <a href="http://www.tonyharrison.com" target="_blank">Tony Harrison</a> <br />
                    <a href="http://www.thecodingdeacon.com" target="_blank">Richard Gross</a> <br />
                </p>
            </div>
        </div>

        <div class="clearfix"></div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/typed.js"></script>
    <script src="~/Scripts/parallax.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
